<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_marginTop="30dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imagenProductoPedido"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/nombreProductoPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Producto"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/precioProductoPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 â‚¬"
            android:textSize="14sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnRestarProductoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />

            <TextView
                android:id="@+id/contadorProductoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnSumarProductoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
